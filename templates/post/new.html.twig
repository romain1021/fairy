{% extends 'base.html.twig' %}

{% block title %}
    Nouveau Post
{% endblock %}

{% block body %}
    <div class="new-post">
        <h1>Créer un nouveau post</h1>
        {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-primary">Publier</button>
        {{ form_end(form) }}
    </div>
    <h1>Créer un repost</h1>
    <form action="{{ path('new_post') }}" method="post">
        <textarea name="content" placeholder="Ajoutez un commentaire..."></textarea>
        <input type="hidden" name="parentPostId" value="{{ app.request.get('parentPostId') }}">
        <button type="submit">Publier</button>
    </form>
{% endblock %}
